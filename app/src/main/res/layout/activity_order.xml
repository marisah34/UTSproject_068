<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".OrderActivity">

        <ImageButton
            android:id="@+id/btnBackToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black"
            android:contentDescription="Back to Food List"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="start"
            android:padding="8dp"
            app:tint="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Food"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/holo_green_dark"/>

        <!-- Food Name Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:textColor="@android:color/holo_green_dark"/>

        <EditText
            android:id="@+id/etFoodName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Enter food name - Get From List"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"/>

        <!-- Number of Servings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Servings"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:textColor="@android:color/holo_green_dark"/>

        <EditText
            android:id="@+id/etServings"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Enter number of servings"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"/>

        <!-- Ordering Name Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordering Name"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:textColor="@android:color/holo_green_dark"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Ordering name by"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"/>

        <!-- Additional Notes Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:textColor="@android:color/holo_green_dark"/>

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Enter any additional notes"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"/>

        <!-- Order Button -->
        <Button
            android:id="@+id/btnOrder"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>
